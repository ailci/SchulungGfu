@if (!string.IsNullOrEmpty(ImageMimeType) && Image is not null)
{
    <img width="150" src="data:@ImageMimeType;base64,@Convert.ToBase64String(Image)" />
}
else
{
    <img width="150" src="https://place-hold.it/150" />
}
@code {

    [Parameter, EditorRequired]
    public string? ImageMimeType { get; set; }

    [Parameter, EditorRequired]
    public byte[]? Image { get; set; }
}